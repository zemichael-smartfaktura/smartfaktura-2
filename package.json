{
  "name": "smartfaktura",
  "private": true,
  "packageManager": "bun@1.2.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@smartfaktura/backend",
    "dev:app": "turbo run dev --filter=@smartfaktura/frontend",
    "lint": "turbo run lint && bun run lint:biome",
    "db:generate": "turbo run db:generate --filter=@smartfaktura/backend",
    "db:migrate": "turbo run db:migrate --filter=@smartfaktura/backend",
    "db:studio": "turbo run db:studio --filter=@smartfaktura/backend",
    "lint:biome": "biome check .",
    "test": "turbo run test",
    "clean": "turbo run clean --force && rm -rf node_modules",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "shadcn": "^3.8.4",
    "turbo": "^2.3.0"
  },
  "engines": {
    "bun": "1"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
