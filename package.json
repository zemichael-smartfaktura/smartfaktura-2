{
  "name": "smartfaktura",
  "private": true,
  "packageManager": "bun@1.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@smartfaktura/backend",
    "dev:app": "turbo run dev --filter=@smartfaktura/frontend",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean --force && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0"
  },
  "engines": {
    "node": ">=20"
  }
}
